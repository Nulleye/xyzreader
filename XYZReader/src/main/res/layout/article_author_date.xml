<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/article_author"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_weight="1"
        android:textAlignment="viewStart"
        android:gravity="left|end"
        android:layout_gravity="left|end"
        android:transitionName="@string/transition_author"
        />

    <TextView
        android:id="@+id/article_date"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8fff"
        android:gravity="right|start"
        android:layout_gravity="right|start"
        android:transitionName="@string/transition_date"
        />

</LinearLayout>